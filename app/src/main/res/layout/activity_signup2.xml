<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moszben.alive.Signup2">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="27dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ref_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg_ver"
                android:paddingTop="@dimen/marg_ver"
                android:layout_below="@id/spinner">

            <EditText
                android:id="@+id/ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/ref" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/slogin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ref_wrap"
                android:layout_centerHorizontal="true"
                android:text="@string/login"
                android:layout_marginTop="@dimen/marg_ver"
                android:layout_marginBottom="@dimen/marg_ver"
                android:onClick="onLogin"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
